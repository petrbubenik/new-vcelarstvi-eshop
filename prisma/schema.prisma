generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String          @id @default(uuid()) @db.Uuid
  slug        String          @unique
  name        String
  description String
  image       String
  images      String?         @db.Text
  createdAt   DateTime        @default(now()) @db.Timestamptz(6)
  updatedAt   DateTime        @updatedAt @db.Timestamptz(6)
  variants    ProductVariant[]
  orderItems  OrderItem[]

  @@index([slug])
}

model ProductVariant {
  id              String      @id @default(uuid()) @db.Uuid
  productId       String
  size            String?     @db.VarChar(50)
  materialType    String?     @db.VarChar(50)
  price           Int
  stock           Int
  product         Product     @relation(fields: [productId], references: [id], onDelete: Cascade)
  orderItems      OrderItem[]

  @@index([productId])
}

model Order {
  id                    String   @id @default(uuid()) @db.Uuid
  customerName          String   @db.VarChar(200)
  email                 String   @db.VarChar(255)
  phone                 String   @db.VarChar(50)
  deliveryMethod        String   @default("PPL") @db.VarChar(50)
  address               String?  @db.VarChar(255)
  city                  String?  @db.VarChar(100)
  postalCode            String?  @db.VarChar(10)
  isCompany             Boolean  @default(false)
  companyName           String?  @db.VarChar(200)
  companyIc             String?  @db.VarChar(20)
  companyDic            String?  @db.VarChar(20)
  differentDeliveryAddr Boolean  @default(false)
  deliveryName          String?  @db.VarChar(200)
  deliveryAddress       String?  @db.VarChar(255)
  deliveryCity          String?  @db.VarChar(100)
  deliveryPostalCode    String?  @db.VarChar(10)
  paymentMethod         String   @db.VarChar(50)
  deliveryCost          Int      @default(0)
  codFee                Int      @default(0)
  status                String   @default("PENDING") @db.VarChar(50)
  total                 Int
  createdAt             DateTime @default(now()) @db.Timestamptz(6)
  items                 OrderItem[]

  @@index([createdAt])
}

model OrderItem {
  id              String      @id @default(uuid()) @db.Uuid
  orderId         String
  productId       String
  variantId       String?    @db.Uuid
  quantity        Int
  priceAtPurchase Int
  size            String?     @db.VarChar(50)
  order           Order       @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product         Product     @relation(fields: [productId], references: [id])
  variant         ProductVariant? @relation(fields: [variantId], references: [id])
}
